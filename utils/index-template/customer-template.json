{
  "index_patterns": [
    "customers*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 1
    },
    "mappings": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "customerCode": {
          "type": "keyword"
        },
        "statusCustomer": {
          "type": "keyword"
        },
        "customerName": {
          "type": "text"
        },
        "customerNameNoSpecialCharacter": {
          "type": "text"
        },
        "customerNameKeyword": {
          "type": "keyword"
        },
        "email": {
          "type": "keyword"
        },
        "phoneNumber": {
          "type": "keyword"
        },
        "inChargeBy": {
          "type": "nested"
        },
        "createdAt": {
          "type": "date"
        }
      }
    }
  }
}