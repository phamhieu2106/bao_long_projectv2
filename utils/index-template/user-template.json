    },
    "mappings": {
      "properties": {
        "createdAt": {
          "type": "date"
        },
        "department": {
          "type": "keyword"
        },
        "id": {
          "type": "keyword"
        },
        "office": {
          "type": "text"
        },
        "officeKeyword": {
          "type": "keyword"
        },
        "role": {
          "type": "keyword"
        },
        "userCode": {
          "type": "keyword"
        },
        "username": {
          "type": "keyword"
        }
      }
    }
  }
}